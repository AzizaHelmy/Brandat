<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <data>

   </data>

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       tools:context=".serach.SearchFragment">

      <androidx.appcompat.widget.SearchView
          android:id="@+id/search"
          android:layout_width="match_parent"
          android:layout_height="64dp"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_margin="16dp"

          />

      <ImageView
          android:id="@+id/filter_image"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:src="@drawable/ic_filter"
          android:layout_margin="16dp"
          app:layout_constraintStart_toStartOf="@id/search"
          app:layout_constraintTop_toBottomOf="@id/search" />

      <LinearLayout
          android:id="@+id/linear"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toTopOf="@id/filter_image"
          app:layout_constraintBottom_toBottomOf="@id/filter_image"
          app:layout_constraintStart_toEndOf="@id/filter_image"
          android:orientation="horizontal"
          android:weightSum="2"
          android:layout_margin="16dp"
          android:gravity="center"
          app:layout_constraintEnd_toEndOf="parent">


         <TextView
             android:id="@+id/price_filter"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             app:layout_constraintTop_toTopOf="@id/filter_image"
             app:layout_constraintBottom_toBottomOf="@id/filter_image"
             app:layout_constraintStart_toEndOf="@id/filter_image"
             android:text="100_200"
             android:layout_weight="1"
             android:padding="8dp"
             android:gravity="center"
             android:layout_marginEnd="8dp"
             android:background="@drawable/rounded_shap"

             />

         <TextView
             android:id="@+id/kind_filter"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:padding="8dp"
             android:background="@drawable/rounded_shap"
             app:layout_constraintTop_toTopOf="@id/filter_image"
             app:layout_constraintBottom_toBottomOf="@id/filter_image"
             app:layout_constraintStart_toEndOf="@id/price_filter"
             android:text="100_200"
             android:layout_marginStart="8dp"

             />
      </LinearLayout>

      <androidx.recyclerview.widget.RecyclerView
          android:layout_width="match_parent"
          android:layout_height="0dp"
          app:layout_constraintTop_toBottomOf="@id/filter_image"
          app:layout_constraintBottom_toBottomOf="parent"
          tools:listitem="@layout/recycler_home_item" />

      <include layout="@layout/bottom_sheet" />

   </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

